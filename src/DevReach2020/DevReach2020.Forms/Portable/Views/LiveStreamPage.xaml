<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="http://prismlibrary.com"
             xmlns:primitives="clr-namespace:Telerik.XamarinForms.Primitives;assembly=Telerik.XamarinForms.Primitives"
             x:Class="DevReach2020.Forms.Portable.Views.LiveStreamPage">

    <Grid>
        <WebView Source="{Binding WebSource}">
            <WebView.Behaviors>
                <behaviors:EventToCommandBehavior EventName="Navigating" Command="{Binding WebViewNavigatingCommand}"/>
                <behaviors:EventToCommandBehavior EventName="Navigated" Command="{Binding WebViewNavigatedCommand}"/>
            </WebView.Behaviors>
        </WebView>

        <primitives:RadBusyIndicator IsBusy="{Binding IsBusy}"
                                     IsVisible="{Binding IsBusy}"
                                     BusyContent="{Binding BusyMessage}"
                                     Style="{StaticResource BusyIndicatorStyle}"
                                     Grid.Row="0"/>
    </Grid>
</ContentPage>